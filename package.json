{
  "name": "excuse-generator",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "run-s lint:js lint:css lint:prettier",
    "lint:check": "run-s lint:*:check",
    "lint:js": "eslint --fix .",
    "lint:js:check": "eslint .",
    "lint:css": "stylelint --fix '**/*.css'",
    "lint:css:check": "stylelint '**/*.css'",
    "lint:prettier": "prettier --write . '!dist/**/*'",
    "lint:prettier:check": "prettier --check . '!dist/**/*'"
  },
  "dependencies": {
    "lodash.sample": "4.2.1",
    "widont": "0.3.4"
  },
  "devDependencies": {
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-spaceninja": "11.0.0",
    "vite": "4.1.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**/*",
      "**/*.html"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-spaceninja",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "dist/**/*"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
